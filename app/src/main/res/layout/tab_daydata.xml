<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- the chart showing last data. -->

    <LinearLayout
        android:id="@+id/id_ly_day_data_chart"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/heightOfChart"
        android:orientation="vertical" >
    </LinearLayout>

    <DatePicker
        android:id="@+id/id_date_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorInDataPicker"
        android:calendarViewShown="false"
        android:maxDate="12/31/2100" 
        android:minDate="01/01/2014" />

</LinearLayout>